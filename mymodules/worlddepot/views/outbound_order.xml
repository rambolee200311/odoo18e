<odoo>
    <!-- Tree View -->
    <record id="view_outbound_order_tree" model="ir.ui.view">
        <field name="name">outbound.order.tree</field>
        <field name="model">world.depot.outbound.order</field>
        <field name="arch" type="xml">
            <list string="Outbound Orders">
                <field name="billno" optional="show"/>
                <field name="type" optional="show"/>
                <field name="reference" optional="show"/>
                <field name="date" optional="show"/>
                <field name="p_date" optional="show"/>
                <field name="owner" optional="show"/>
                <field name="project" optional="show"/>
                <field name="unload_company" optional="show"/>
                <field name="load_ref" optional="show"/>
                <field name="state" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_outbound_order_form" model="ir.ui.view">
        <field name="name">outbound.order.form</field>
        <field name="model">world.depot.outbound.order</field>
        <field name="arch" type="xml">
            <form string="Outbound Order">
                <header>
                    <!-- groups="panexLogi.groups_panex_finance_manager"-->
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state!='new'"/>
                    <button name="action_unconfirm" type="object" string="UnConfirm" class="btn-primary" invisible="state!='confirm'"/>
                    <button name="action_cancel" type="object" string="Cancel" class="btn-secondary" invisible="state!='new'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,confirm"/>
                    <widget name="web_ribbon" title="CANCEL" bg_color="bg-danger" invisible="state!='cancel'"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Outbound Order
                        </h1>
                        <h2>
                            <field name="billno"/>
                        </h2>
                    </div>
                     <div class="oe_button_box" name="button_box">
                        <!--<button name="action_calculate_charges"
                            type="object"
                            string="Cal Charges"
                            class="oe_stat_button" icon="fa-calculator"/>-->
                         <button name="action_check_avaliable"
                                type="object"
                                string="Check Available"
                                class="oe_stat_button" icon="fa-check-square"/> 
                         <button name="view_outbound_order_product_details"
                                type="object"
                                string="Product Detail"
                                class="oe_stat_button" icon="fa-tasks"/>
                         <button name="action_create_picking_PICK"
                            type="object"
                            string="Create Picking"
                            class="oe_stat_button" icon="fa-file-text"/>
                         <button name="action_create_cmr"
                            type="object"
                            string="Create CMR"
                            class="oe_stat_button" icon="fa-film"/>
                         <button name="view_outbound_order_sn_details"
                            type="object"
                            string="View SN"
                            class="oe_stat_button" icon="fa-film"/>
                    </div>
                    <group col="2">
                        <group col="2" string="Main">
                            <field name="type" readonly="state!='new'"/>
                            <field name="date" readonly="state!='new'"/>
                            <field name="p_date" readonly="state!='new'"/>
                            <field name="project" readonly="state!='new'"/>
                            <field name="owner" readonly="state!='new'"/>
                            <field name="warehouse" readonly="state!='new'"/>
                            <field name="reference" readonly="state!='new'"/>
                            <field name="is_adr" readonly="state!='new'"/>

                        </group>
                        <group col="2" string="Info">
                            <field name="pick_type"/>
                           <!-- <field name="pallet_prefix_code"/>-->
                            <field name="is_auto_moves"/>
                            <field name="remark"/>
                            <field name="remark1"/>
                            <field name="confirm_user_id" readonly="1"/>
                            <field name="confirm_time_user_tz" readonly="1"/>
                            <field name="confirm_time_server" readonly="1"/>
                            <field name="picking_PICK" readonly="1"/>
                            <field name="picking_PICK_date" readonly="1"/>
                            <field name="picking_Out" readonly="1"/>
                             <field name="picking_Out_date" readonly="1"/>
                            <field name="status" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Delivery">
                            <group col="2">
                                <group col="2">
                                    <field name="delivery_method"/>
                                    <field name="unload_company"/>
                                    <field name="delivery_street"/>
                                    <field name="delivery_city"/>
                                    <field name="delivery_zip"/>
                                    <field name="delivery_country_id"/>
                                    <field name="delivery_phone"/>
                                    <field name="delivery_mobile"/>
                                    <field name="delivery_email"/>
                                    <field name="delivery_remark"/>
                                </group>
                                <group col="2">
                                    <field name="load_ref"/>
                                    <field name="load_date"/>
                                    <field name="delivery_company"/>
                                    <field name="delivery_number"/>
                                    <field name="plate_number"/>
                                    <field name="receiver_sign_back_date"/>
                                    <field name="pod_file" widget="binary" filename="pod_filename"/>
                                    <field name="pod_filename" invisible="1"/>
                                    <field name="delivery_issuance_time" invisible="project.name!='HOYMILES'"/>
                                    <field name="delivery_issuance_remark" invisible="project.name!='HOYMILES'"/>
                                </group>
                            </group>
                        </page>
                        <page string="Products">
                            <field name="outbound_order_product_ids" readonly="state!='new'">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="adr"/>
                                    <field name="un_number"/>
                                    <field name="pallets"/>
                                    <field name="quantity"/>
                                    <field name="serial_numbers"/>
                                    <field name="pallet_prefix_code"/>
                                    <field name="remark"/>
                                    <field name="locations" readonly="1" optional="show"/>
                                    <field name="weight" optional="show"/>
                                    <field name="weight_subtotal" optional="show"/>
                                    <!--<field name="is_outbound_handling"/>
                                    <field name="outbound_handling_price"/>
                                    <field name="outbound_handling_unit"/>
                                    <field name="outbound_handling_charge"/>
                                    <field name="is_scanning"/>
                                    <field name="outbound_scanning_price"/>
                                    <field name="outbound_scanning_charge"/>-->
                                </list>
                            </field>
                        </page>
                        <page string="Pack Info">
                            <group col="2">
                                <group col="2">
                                    <field name="pallets_of_pick"/>
                                    <field name="pallets_of_packed"/>
                                </group>
                                 <group col="2">
                                    <field name="pack_type" />
                                    <field name="pallet_type"/>
                                 </group>
                            </group>
                            <field name="outbound_order_pack_ids" readonly="state=='cancel'">
                                <list>
                                    <field name="pack_number"/>
                                    <field name="count"/>
                                    <field name="pack_owner"/>
                                    <field name="product_description"/>
                                    <field name="length"/>
                                    <field name="width"/>
                                    <field name="height"/>
                                    <field name="volume"/>
                                    <field name="gross_weight"/>
                                    <field name="net_weight"/>
                                    <field name="tare_weight"/>
                                    <field name="remark"/>
                                </list>
                            </field>
                        </page>
                        <page string="Charges">
                            <field name="outbound_order_charge_ids" readonly="state=='cancel'">
                                <list>
                                    <field name="charge_item_id"/>
                                    <field name="quantity" sum="Total Quantity"/>
                                    <field name="charge_unit_name"/>
                                    <field name="charge_unit_id"/>
                                    <field name="unit_price"/>
                                    <field name="amount" sum="Total Amount"/>
                                    <field name="currency_id"/>
                                </list>
                            </field>
                        </page>
                        <page string="Documents">
                            <field name="outbound_order_docs_ids">
                                <list editable="bottom">
                                    <field name="doc_type"/>
                                    <field name="description"/>
                                    <field name="file" widget="binary" filename="filename"/>
                                    <field name="filename" invisible="1"/>
                                </list>
                            </field>
                        </page>
                         <page string="Hoymiles APIs" groups="account.group_project_hoymiles">
                            <group string="Start Operatoin" col="2">
                                <group col="2">
                                    <div class="oe_button_box" name="button_box">
                                        <button name="action_set_status_to_confirmed"
                                            type="object"
                                            string="Start Operatoin"
                                            class="oe_stat_button" icon="fa-film"/>
                                        </div>
                                    <field name="set_status_to_confirmed" string="success" readonly="1"/>  
                                </group>    
                                <group col="2">                          
                                    <field name="status_to_confirmed_time_user" string="time user"/>
                                    <field name="set_status_to_confirmed_time" string="time" readonly="1"/>
                                    <field name="status_to_confirmed_error_msg" string="error" readonly="1"/>
                                </group>
                            </group>  
                            <group string="Pick Finished" col="2"> 
                                <group col="2">
                                    <div class="oe_button_box" name="button_box">
                                        <button name="action_set_status_to_pick_finished"
                                            type="object"
                                            string="Pick Finished"
                                            class="oe_stat_button" icon="fa-film"/>
                                    </div>
                                    <field name="set_status_to_pick_finished" string="success" readonly="1"/>
                                </group>
                                <group col="2">
                                    <field name="status_to_pick_finished_time_user" string="time user"/>
                                    <field name="set_status_to_pick_finished_time" string="time" readonly="1"/>
                                    <field name="status_to_pick_finished_error_msg" string="error" readonly="1"/>
                                </group>    
                            </group>    
                            <group string="Outbound Pack" col="2">
                                <group col="2">
                                    <div class="oe_button_box" name="button_box">
                                        <button name="action_set_outbound_pack_sync"
                                            type="object"
                                            string="Outbound Pack"
                                            class="oe_stat_button" icon="fa-film"/>
                                    </div>
                                    <field name="set_outbound_pack_sync" string="success" readonly="1"/>
                                </group>    
                                <group col="2">
                                    <field name="outbound_pack_sync_time_user" string="time user"/>
                                    <field name="set_outbound_pack_sync_time" string="time" readonly="1"/>
                                    <field name="outbound_pack_sync_error_msg" string="error" readonly="1"/>
                                </group>    
                            </group>
                            <group string="Logistics Info" col="2">
                                <group col="2">
                                    <div class="oe_button_box" name="button_box">
                                        <button name="action_set_logistics_info_sync"
                                            type="object"
                                            string="Logistics Info"
                                            class="oe_stat_button" icon="fa-film"/>
                                    </div>
                                    <field name="set_logistics_info_sync" string="success" readonly="1"/>
                                </group>    
                                <group col="2">
                                    <field name="logistics_info_sync_time_user" string="time user"/>
                                    <field name="set_logistics_info_sync_time" string="time" readonly="1"/>
                                    <field name="logistics_info_sync_error_msg" string="error" readonly="1"/>
                                </group>    
                            </group>
                            <group string="Outbound Result" col="2">
                                <group col="2">
                                    <div class="oe_button_box" name="button_box">
                                        <button name="action_set_outbound_result_sync"
                                            type="object"
                                            string="Outbound Result"
                                            class="oe_stat_button" icon="fa-film"/>
                                    </div>
                                    <field name="set_outbound_result_sync" string="success" readonly="1"/>
                                </group>    
                                <group col="2">
                                    <field name="outbound_result_sync_time_user" string="time user"/>
                                    <field name="set_outbound_result_sync_time" string="time" readonly="1"/>
                                    <field name="outbound_result_sync_error_msg" string="error" readonly="1"/>
                                </group>    

                            </group>                            
                        </page>
                       <!-- <page string="Charges">
                            <group col="2">
                                <group col="2">
                                    <field name="outbound_delivery_charge"/>
                                    <field name="outbound_system_file_charge"/>
                                    <field name="outbound_DGD_charge"/>
                                    <field name="outbound_pallet_type"/>
                                    <field name="outbound_pallet_fee"/>
                                    <field name="outbound_palletizing_qty"/>
                                    <field name="outbound_palletizing_charge"/>
                                </group>
                                <group col="2">
                                    <field name="pallets"/>
                                    <field name="scanning_quantity"/>
                                    <field name="outbound_handling_charge"/>
                                    <field name="outbound_scanning_charge"/>
                                </group>
                            </group>
                        </page>-->
                    </notebook>
                </sheet>
                <!--<div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>-->
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_outbound_order_search" model="ir.ui.view">
        <field name="name">outbound.order.search</field>
        <field name="model">world.depot.outbound.order</field>
        <field name="arch" type="xml">
            <search string="Outbound Orders">
                <field name="billno"/>
                <field name="date"/>
                <field name="p_date"/>
                <field name="reference"/>
                <field name="owner"/>
                <field name="project"/>
                <field name="warehouse"/>
                <field name="unload_company"/>
                <field name="load_ref"/>
                <field name="state"/>
                <filter string="Active Orders" name="state_not_cancel" domain="[('state', '!=', 'cancel')]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_outbound_order" model="ir.actions.act_window">
        <field name="name">Outbound Orders</field>
        <field name="res_model">world.depot.outbound.order</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_outbound_order_tree"/>
        <field name="context">{'search_default_state_not_cancel': 1}</field>
        <field name="domain">[]</field>
    </record>

    <!-- outbound product lines tree view -->
    <record id="view_outbound_order_product_tree" model="ir.ui.view">
        <field name="name">outbound.order.product.tree</field>
        <field name="model">world.depot.outbound.order.product</field>
        <field name="arch" type="xml">
            <list string="Outbound Order Products">
                <field name="product_id" optional="show"/>
                <field name="barcode" optional="show"/>
                <field name="default_code" optional="show"/>
                <field name="adr" optional="show"/>
                <field name="un_number" optional="show"/>
                <field name="pallets" optional="show"/>
                <field name="quantity" optional="show"/>
                <field name="weight" optional="show"/>
                <field name="weight_subtotal" optional="show"/>
                <field name="serial_numbers" optional="show"/>
                <field name="pallet_prefix_code" optional="show"/>
                <field name="remark" optional="show"/>
            </list>
        </field>
    </record>
</odoo>