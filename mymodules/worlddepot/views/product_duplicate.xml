<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- List View for Duplicate Products -->
    <record id="view_product_duplicate_tree" model="ir.ui.view">
        <field name="name">world.depot.product.duplicate.tree</field>
        <field name="model">world.depot.product.duplicate</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id"/>
                <field name="product_name"/>
                <field name="categ_id"/>
                <field name="barcode"/>
                <field name="nine_digit_linglong_code"/>
            </list>
        </field>
    </record>

   <!-- Search View for Duplicate Products -->
    <record id="view_product_duplicate_search" model="ir.ui.view">
        <field name="name">world.depot.product.duplicate.search</field>
        <field name="model">world.depot.product.duplicate</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <field name="product_name"/>
                <field name="categ_id"/>
                <field name="barcode"/>
                <field name="nine_digit_linglong_code"/>
            </search>
        </field>
    </record>

    <!-- Action to Open Duplicate Products List -->
    <record id="action_product_duplicate" model="ir.actions.act_window">
        <field name="name">Duplicate Products</field>
        <field name="res_model">world.depot.product.duplicate</field>
        <field name="view_mode">list,search</field>
    </record>
</odoo>