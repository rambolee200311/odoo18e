<odoo>
    <!-- Tree View for ChargeUnit -->
    <record id="view_world_depot_charge_unit_tree" model="ir.ui.view">
        <field name="name">charge.unit.tree</field>
        <field name="model">world.depot.charge.unit</field>
        <field name="arch" type="xml">
            <list string="Charge Units">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>

    <!-- Form View for ChargeUnit -->
    <record id="view_world_depot_charge_unit_form" model="ir.ui.view">
        <field name="name">charge.unit.form</field>
        <field name="model">world.depot.charge.unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Charge Unit
                        </h1>
                    </div>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for ChargeUnit -->
    <record id="action_world_depot_charge_unit" model="ir.actions.act_window">
        <field name="name">Charge Units</field>
        <field name="res_model">world.depot.charge.unit</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Tree View for ChargeItem -->
    <record id="view_world_depot_charge_item_tree" model="ir.ui.view">
        <field name="name">charge.item.tree</field>
        <field name="model">world.depot.charge.item</field>
        <field name="arch" type="xml">
            <list string="Charge Items">
                <field name="full_item_name" optional="show"/>
                <field name="item_name" optional="show"/>
                <field name="parent_id" optional="show"/>
                <field name="unit_id" optional="show"/>
                <field name="description" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View for ChargeItem -->
    <record id="view_world_depot_charge_item_form" model="ir.ui.view">
        <field name="name">charge.item.form</field>
        <field name="model">world.depot.charge.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            Item of Charge
                        </h1>
                        <h2>
                            <field name="full_item_name" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <field name="item_name"/>
                        <field name="parent_id"/>
                        <field name="unit_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View for ChargeItem -->
    <record id="view_world_depot_charge_item_search" model="ir.ui.view">
        <field name="name">charge.item.search</field>
        <field name="model">world.depot.charge.item</field>
        <field name="arch" type="xml">
            <search>
                <field name="item_name"/>
                <field name="full_item_name"/>
                <field name="parent_id"/>
                <field name="unit_id"/>
                <field name="description"/>
            </search>
        </field>
    </record>

    <!-- Action for ChargeItem -->
    <record id="action_world_depot_charge_item" model="ir.actions.act_window">
        <field name="name">Charge Items</field>
        <field name="res_model">world.depot.charge.item</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>