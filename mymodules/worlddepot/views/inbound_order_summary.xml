<odoo>
    <record id="view_inbound_order_summary_tree" model="ir.ui.view">
        <field name="name">inbound.order.summary.tree</field>
        <field name="model">world.depot.inbound.order.summary</field>
        <field name="arch" type="xml">
            <list string="Inbound Order Summary">
                <header>
                    <button name="action_manual_refresh" 
                            string="Refresh Summary" 
                            type="object" 
                            class="btn-primary"/>
                </header>
                <field name="order_id" widget="many2one" optional="show"/>
                <field name="state" optional="show"/>
                <field name="project" optional="show"/>
                <!--<field name="project_name" optional="show"/>-->
                <field name="reference" optional="show"/>
                <field name="type" optional="show"/>
                <field name="a_date" optional="show"/>
                <field name="i_datetime" optional="show"/>
                <field name="cntr_no" optional="show"/>
                <field name="bl_no" optional="show"/>
                <field name="pallets" optional="show"/>
                <field name="mixed" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="product_name" optional="show"/>
                <field name="quantity" optional="show"/>
                <field name="qty_subtotal" optional="show"/>
                <field name="barcode" optional="show"/>
                <field name="default_code" optional="show"/>
                <field name="stock_picking_id"  widget="many2one" optional="show"/>
            </list>
        </field>
    </record>

    

    <record id="view_inbound_order_summary_search" model="ir.ui.view">
        <field name="name">inbound.order.summary.search</field>
        <field name="model">world.depot.inbound.order.summary</field>
        <field name="arch" type="xml">
            <search string="Inbound Order Summary">
                <field name="project"/>
                <field name="reference"/>
                <field name="type"/>
                <field name="a_date"/>
                <field name="i_datetime"/>
                <field name="pallets"/>
                <field name="cntr_no"/>
                <field name="bl_no"/>
                <field name="product_id"/>
                <field name="mixed"/>
                <field name="barcode"/>
                <field name="default_code"/>
                <field name="quantity"/>
                <field name="state"/>
                <filter string="Confirmed Orders" name="confirmed_orders" domain="[('order_id.state', '=', 'confirm')]"/>
            </search>
        </field>
    </record>
    <!-- Action -->
    <record id="action_inbound_order_summary" model="ir.actions.act_window">
        <field name="name">Inbound Order Summary</field>
        <field name="res_model">world.depot.inbound.order.summary</field>
        <field name="view_mode">list,search</field>
        <field name="view_id" ref="view_inbound_order_summary_tree"/>
        <field name="search_view_id" ref="view_inbound_order_summary_search"/>
    </record>

    <!-- Server action to manually refresh the inbound order summary
    <record id="server_action_refresh_inbound_order_summary" model="ir.actions.server">
        <field name="name">Refresh Inbound Order Summary</field>
        <field name="model_id" ref="model_world_depot_inbound_order_summary"/>
        <field name="state">code</field>
        <field name="code">model.action_manual_refresh()</field> 
    </record> -->
</odoo>